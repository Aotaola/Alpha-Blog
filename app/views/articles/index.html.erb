<h1> Articles Listing Page </h1>

<table>
    <thead>
        <tr>
        <th> Title </th>
        <th> Description <th>
        <th> Content </th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article|%>
        <tr>
            <td> <%= article.title %> </td>
            <td> <%= article.description %> </td>
            <td> <%= "click to view (placeholder)" %> </td>
        </tr>
        <%end%>
    </tbody>    
</table>